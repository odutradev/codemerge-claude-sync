{
  "manifest_version": 3,
  "name": "CodeMerge Sync",
  "version": "3.2.3",
  "description": "Selecione e sincronize arquivos do CodeMerge com Claude Projects e Gemini via sidebar",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "http://localhost:9876/*",
    "http://127.0.0.1:9876/*"
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/sidebar/core/index.html"
  },
  "action": {
    "default_title": "CodeMerge Sync",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/project/*"
      ],
      "js": [
        "src/scripts/projectHelper.js",
        "src/scripts/upsertFile.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "src/services/geminiService.js",
        "src/scripts/gemini/brigde.js",
        "src/scripts/gemini/setWiz.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "src/scripts/gemini/injector.js"
      ],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ]
}