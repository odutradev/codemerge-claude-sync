{
  "manifest_version": 3,
  "name": "CodeMerge Sync",
  "version": "2.0.5",
  "description": "Selecione e sincronize arquivos do CodeMerge com Claude Projects e Gemini via sidebar",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/sidebar/index.html"
  },
  "action": {
    "default_title": "CodeMerge Sync"
  },
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/project/*"
      ],
      "js": [
        "src/scripts/projectHelper.js",
        "src/scripts/upsertFile.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "src/services/geminiService.js",
        "src/scripts/gemini/brigde.js.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "src/scripts/gemini/injector.js"
      ],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ]
}
