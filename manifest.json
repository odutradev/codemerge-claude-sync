{
  "manifest_version": 3,
  "name": "CodeMerge Sidebar",
  "version": "1.1.4",
  "description": "Selecione e sincronize arquivos do CodeMerge com Claude Projects e Gemini via sidebar",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "side_panel": {
    "default_path": "src/sidebar/sidebar.html"
  },
  "action": {
    "default_title": "CodeMerge Sync"
  },
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/project/*"
      ],
      "js": [
        "src/scripts/projectHelper.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "src/services/geminiService.js",
        "src/scripts/geminiHelper.js",
        "src/scripts/geminiArtifactsHelper.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "src/scripts/geminiInjector.js"
      ],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ]
}
