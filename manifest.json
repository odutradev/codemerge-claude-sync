{
  "manifest_version": 3,
  "name": "CodeMerge Claude Sync",
  "version": "1.0.2",
  "description": "Sincroniza automaticamente c√≥digo do CodeMerge com Claude Projects",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/project/*"
      ],
      "js": [
        "src/scripts/upsertFile.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
